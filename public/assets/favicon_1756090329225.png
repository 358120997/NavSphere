      transform: translateY(-5px);
    }
    .feature-card {
      background: white;
      border-radius: 15px;
      padding: 30px;
      margin-bottom: 20px;
      box-shadow: 0 10px 30px rgba(0,0,0,0.1);
      transition: transform 0.3s ease, box-shadow 0.3s ease;
      border: none;
      height: 100%;
    }
    .feature-card:hover {
      transform: translateY(-5px);
      box-shadow: 0 15px 40px rgba(0,0,0,0.15);
    }
    .feature-icon {
      font-size: 3rem;
      margin-bottom: 20px;
      color: #667eea;
    }
    .cta-buttons {
      margin-top: 40px;
    }
    .btn-custom {
      padding: 12px 30px;
      border-radius: 25px;
      font-weight: 600;
      margin: 0 10px 10px 0;
      transition: all 0.3s ease;
    }
    .btn-custom:hover {
      transform: translateY(-2px);
      box-shadow: 0 5px 15px rgba(0,0,0,0.2);
    }
